<menus>
    <menu id="system" value="System">
        <menuitem id="1" value="Distro" splitChar="=" linesIgnore="0" command="cat /etc/os-release ; echo ; echo -n 'Desktop-Umgebung=' ; xfce4-panel --version | head -n 1" />
        <menuitem id="2" value="Kernel" splitChar="=" linesIgnore="2" command="uname -a ; echo ; zcat /proc/config.gz" />
        <menuitem id="3" value="CPU" splitChar=":" linesIgnore="" command="grep 'model name' /proc/cpuinfo | uniq | sed 's/model name/CPU Model/g' ; echo -n 'Number of CPUs: ' ; nproc ; echo ; cat /proc/cpuinfo ; echo ; echo" />
        <menuitem id="4" value="GPU" splitChar=":" linesIgnore="" command="lspci -nn | grep VGA" />
        <menuitem id="4" value="PCI" splitChar=": " linesIgnore="" command="lspci -nn" />
        <menuitem id="4" value="USB" splitChar=": " linesIgnore="" command="lsusb" />
        <menuitem id="5" value="Vulkan" splitChar=":" linesIgnore="" command="vulkaninfo | tail -n +5 | uniq" />
        <menuitem id="6" value="OpenGL" splitChar=":" linesIgnore="" command="glxinfo | grep OpenGL" />
        <menuitem id="6" value="OpenCL" splitChar=":" linesIgnore="" command="clinfo | sed 's/   */:/g;s/^://'" />
        <menuitem id="7" value="VDPAU" splitChar=":" linesIgnore="" command="vdpauinfo" />
        <menuitem id="8" value="VA-API" splitChar=":" linesIgnore="" command="vainfo" />
        <menuitem id="8" value="Pulse" splitChar=":" linesIgnore="" command="pactl info" />
        <menuitem id="9" value="cpupower" splitChar=":" linesIgnore="" command="cpupower frequency-info | egrep --invert-match 'range|decide|Bereich|entscheid' | sed 's/GHz\./GHz sein./'" />
    </menu>
    <commands>
    </commands>

